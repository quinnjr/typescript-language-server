#!/bin/bash
#
# Git pre-commit hook for git-flow enforcement
# Validates commit messages follow conventional commits format
#

set -e

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

# Get the commit message from the commit message file
# For pre-commit, we check staged files; commit-msg hook checks message
# This hook runs before commit-msg, so we do basic checks here

echo -e "${GREEN}Running pre-commit checks...${NC}"

# Check if we're on a protected branch
CURRENT_BRANCH=$(git symbolic-ref --short HEAD 2>/dev/null || echo "")

# Protected branches - no direct commits allowed
PROTECTED_BRANCHES=("main" "master" "develop")

for PROTECTED in "${PROTECTED_BRANCHES[@]}"; do
    if [[ "$CURRENT_BRANCH" == "$PROTECTED" ]]; then
        echo -e "${RED}❌ Error: Direct commits to '$CURRENT_BRANCH' are not allowed.${NC}"
        echo ""
        echo "This project uses git-flow. Please create a branch instead:"
        echo ""
        if [[ "$CURRENT_BRANCH" == "main" || "$CURRENT_BRANCH" == "master" ]]; then
            echo "  For production fixes:"
            echo "    git checkout -b hotfix/v1.0.1"
            echo ""
            echo "  For releases:"
            echo "    git checkout -b release/v1.0.0"
        else
            echo "  For new features:"
            echo "    git checkout -b feature/my-feature"
            echo ""
            echo "  For bug fixes:"
            echo "    git checkout -b bugfix/fix-description"
            echo ""
            echo "  For maintenance tasks:"
            echo "    git checkout -b chore/task-description"
        fi
        echo ""
        echo "Then commit your changes and create a pull request."
        exit 1
    fi
done

# Run cargo fmt check if Rust files are staged
RUST_FILES=$(git diff --cached --name-only --diff-filter=ACM | grep '\.rs$' || true)
if [[ -n "$RUST_FILES" ]]; then
    echo "Checking Rust formatting..."
    if command -v cargo &> /dev/null; then
        if ! cargo fmt --check &> /dev/null; then
            echo -e "${RED}❌ Error: Rust code is not formatted.${NC}"
            echo ""
            echo "Run 'cargo fmt' to fix formatting issues."
            exit 1
        fi
        echo -e "${GREEN}✓ Rust formatting OK${NC}"
    fi
fi

# Run cargo clippy if Rust files are staged (warning only)
if [[ -n "$RUST_FILES" ]]; then
    echo "Running Clippy..."
    if command -v cargo &> /dev/null; then
        if ! cargo clippy --quiet 2>/dev/null; then
            echo -e "${YELLOW}⚠ Warning: Clippy found issues. Consider fixing them.${NC}"
        else
            echo -e "${GREEN}✓ Clippy OK${NC}"
        fi
    fi
fi

# Check TypeScript/JavaScript files with ESLint if staged
TS_FILES=$(git diff --cached --name-only --diff-filter=ACM | grep -E '\.(ts|mts|js|mjs)$' || true)
if [[ -n "$TS_FILES" ]]; then
    echo "Checking TypeScript/JavaScript files..."
    if [[ -f "editors/vscode/node_modules/.bin/eslint" ]]; then
        cd editors/vscode
        if ! npx eslint $TS_FILES --quiet 2>/dev/null; then
            echo -e "${YELLOW}⚠ Warning: ESLint found issues.${NC}"
        else
            echo -e "${GREEN}✓ ESLint OK${NC}"
        fi
        cd - > /dev/null
    fi
fi

echo -e "${GREEN}✓ Pre-commit checks passed${NC}"
exit 0

